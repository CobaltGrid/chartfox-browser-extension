{
    "manifest_version": 3,
    "name": "ChartFox Browser Extension",
    "description": "Enable fully-integrated chart viewing within the ChartFox web app",
    "version": "1.1",
    "permissions": [
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "ruleset_1",
                "enabled": true,
                "path": "src/rule.json"
            }
        ]
    },
    "action": {
        "default_popup": "src/popups/entrypoint.html"
    },
    "content_scripts": [
        {
            "js": [
                "src/scripts/chartfox-indicator.ts"
            ],
            "matches": [
                "*://localhost/*"
            ]
        }
    ],
    "icons": {
        "48": "src/images/icon.png"
    }
}